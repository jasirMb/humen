<link rel="stylesheet" href="/admin/stylesheets/style.css"> 












  

<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                   
                    <p class="card-description mt-5"><h1>PRODUCT MANAGEMENT</h1>  
                    </p>
                    <a href="/admin/add-product" class="btn btn-outline-success btn-lg">Add new Product</a>
                   
                    <table class="table table-striped mt-5">
                      <thead>
                        <tr>
                          <th> Image </th>
                          <th> Name </th>
                          <th> Brand </th>
                          <th> Quality </th>
                          <th> Category </th>
                          <th> Price </th>
                          <th> Edit </th>
                          <th> Remove </th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each products}} 
                        <tr>
                            <td class="py-1">
                                <img src="/product-images/{{this.Name}}.jpg" alt="image" />
                            </td>
                            <td>{{this.Name}}</td>
                            <td> {{this.Brand}} </td>
                            <td>{{this.Quantity}}</td>
                            <td>{{this.Category}}</td>
                            <td>{{this.Price}}</td>
                            <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
                            <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                                    onclick="return confirm('do you want to delete {{this.Name}} ?')">Remove</a></td>
                        
                        </tr>
                          {{/each}}