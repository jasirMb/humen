<div class="col-12 grid-margin stretch-card">
    <img src="https://cdn.learnwoo.com/wp-content/uploads/2016/11/Adding-Products_Cropped.png" width="750px" height="800px" alt="">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Basic form elements</h4>
                    <p class="card-description mt-5 mb-5"><h2>Add Product</h2> </p>
                    <form action="/admin/add-product" enctype="multipart/form-data" method="post" class="forms-sample mt-5">
                      <div class="form-group col-5">
                        <label for="exampleInputName1">Name</label>
                        <input type="text" name="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                      </div>
                      <div class="form-group col-5">
                        <label for="exampleInputEmail3">Brand Name</label>
                        <input type="text" name="Brand" class="form-control" id="exampleInputEmail3" placeholder="Brand">
                      </div>
                      <div class="form-group col-5">
                        <label for="exampleInputPassword4">Quantity</label>
                        <input type="number" name="Quantity" class="form-control" id="exampleInputPassword4" placeholder="QTY">
                      </div>
                      <div class="form-group col-3">
                        <label for="exampleSelectGender">Category</label>
                        <select class="form-control" name="Category" id="exampleSelectGender">
                          <option>Jeans</option>
                          <option>Shirt</option>
                          <option>T-shirt</option>
                          <option>Shorts</option>
                        </select>
                      </div>
                    <div class="form-group">
                        <label>Image</label><br>
                        <input type="file" name="Image" class="form-control-file mt-2" id="Image">
                    </div>    <div class="form-group col-5">
                        <label for="exampleInputCity1">Price</label>
                        <input type="number" name="Price" class="form-control" id="exampleInputCity1" placeholder="Amount">
                      </div>
                     
                      <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                      <button class="btn btn-light">Cancel</button>
                    </form>
                  </div>
                </div>
              </div>